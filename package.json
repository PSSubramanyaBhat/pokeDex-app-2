{
  "name": "poke-dex",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.1",
    "@testing-library/user-event": "^12.2.2",
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^3.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|css)": [
      "npm run format",
      "prettier --write",
      "git add",
      "npm run lint-js"
    ],
    "*.pretty-quick": "prettier --write"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build_serve": "rm -rf ./build && npm run build && npx serve ./build",
    "test": "react-scripts test",
    "test_no_watch": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "generate": "plop && pretty-quick",
    "format": "pretty-quick",
    "lint-js": "eslint src --ext .js",
    "lint-fix": "npm run lint-js -- --fix",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.1.1",
    "@storybook/addon-essentials": "^6.1.1",
    "@storybook/addon-links": "^6.1.1",
    "@storybook/node-logger": "^6.1.1",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.1",
    "eslint": "^7.14.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "plop": "^2.7.4",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0"
  }
}